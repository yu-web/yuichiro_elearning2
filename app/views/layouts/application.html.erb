<!DOCTYPE html>
<html>
	<head>
    <title>YuichiroElearning</title>
 		<%= csrf_meta_tags %>
    	<%= csp_meta_tag %>

    	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

  	<body>
  	<div class="background-image">
    	<%= render "layouts/header" %>

		<% if flash.any? %>
          <% flash.each do |type1,msg1| %>
            <div class="alert alert-<%= type1 %>">
              <div class="text-center"><%= msg1 %></div>
            </div>
          <% end %>
      <% end %>
  
    	<%= yield %>
  	</div>
  	</body>
</html>
