<div class="col-6 mx-auto">
	<h1 class="text-center mb-3">Edit new Category</h1>
		
	<%= form_for [:admin,@category] do |f| %>
    <div class="text-danger"><%= render "shared/error_messages2", object: f.object %></div>
		<div class="form-group text-center">
			<%= f.label :Title %>
			<%= f.text_field :name,class: "form-control" %>
		</div>

		<div class="form-group text-center">
			<%= f.label :Description %>
			<%= f.text_area :content,class: "form-control" %>
		</div>

		<%= f.submit "Create new category",class: "btn btn-success btn-block" %> 


	<% end %>

</div>

<div class="text-center"><%= link_to "back",admin_categories_path,class: "btn btn-dark btn-sm backbtn mt-3" %></div>