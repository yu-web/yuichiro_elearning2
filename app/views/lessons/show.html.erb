<h1 class="text-center mb-3">Lesson's <%=@lesson.category.name %> result</h1>
<p class="text-center">Total correct answers are <%= @lesson.result %>/<%= @answers.count %></p>

<div class="paginate text-center">
	<%= will_paginate @answers %>
</div>

<div class="container">
	<table class="table table-secondary">
		<thead>
			<tr>
				<th scope="col">Word</th>
				<th scope="col">Answer</th>
				<th scope="col">Correct Answer</th>
        		<th scope="col">Result</th>
			</tr>
		</thead>
		<tbody>
			<% @answers.each do |answer| %>
				<tr>
					<td><%= answer.word.content %></td>
					<td><%= answer.choice.content %></td>
					<td><%= answer.word.correct_answer %></td>
          			<td><% if answer.choice.content == answer.word.correct_answer %>
              		〇
			<% else %>
			        ✖
            <% end %>
          			</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<div>
<div class="text-center"><%= link_to "back",categories_path,class: "btn btn-dark btn-sm backbtn" %></div>